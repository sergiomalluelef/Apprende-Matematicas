<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondoinicio"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="com.example.samsung.game.MainDibujar"
    android:id="@+id/LinearDibujo">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:weightSum="1"
        android:paddingTop="5dp">

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/button3"
            android:layout_alignBottom="@+id/button3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            android:text="Volver"
            android:background="@drawable/borde_redondo"/>

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="22dp"
            android:layout_marginStart="22dp"
            android:layout_toEndOf="@+id/button2"
            android:layout_toRightOf="@+id/button2"
            android:text="Home"
            android:background="@drawable/borde_redondo"/>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/button2"
            android:layout_marginEnd="22dp"
            android:layout_marginRight="22dp"
            android:src="@drawable/personaje" />

    </RelativeLayout>


    <FrameLayout
        android:layout_width="454dp"
        android:layout_height="217dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:background="@drawable/borde_redondo"
        android:padding="4dp">
        <FrameLayout

            android:id="@+id/frameContenedor"
            android:layout_width="454dp"
            android:layout_height="217dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:background="#fff">

            <ImageView
                android:id="@+id/imguno"
                android:layout_width="143dp"
                android:layout_height="163dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="140dp"
                android:src="@drawable/nuno" />


            <com.example.samsung.game.GuiarPuntos
                android:id="@+id/dibujo"
                android:layout_width="143dp"
                android:layout_height="163dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="140dp" />



        </FrameLayout>
    </FrameLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="58dp">

        <Button
            android:id="@+id/btnokImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="244dp"
            android:layout_marginRight="244dp"
            android:text="OK"
            android:background="@drawable/borde_redondo"/>
    </RelativeLayout>

</LinearLayout>
